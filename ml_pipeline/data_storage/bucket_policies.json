{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowMLPipelineAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::*:user/ml_user"
      },
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::alzheimer-ml-data/*",
        "arn:aws:s3:::alzheimer-ml-data"
      ]
    },
    {
      "Sid": "DenyUnencryptedObjectUploads",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:PutObject",
      "Resource": "arn:aws:s3:::alzheimer-ml-data/*",
      "Condition": {
        "StringNotEquals": {
          "s3:x-amz-server-side-encryption": "AES256"
        }
      }
    },
    {
      "Sid": "RequireSecureTransport",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::alzheimer-ml-data/*",
        "arn:aws:s3:::alzheimer-ml-data"
      ],
      "Condition": {
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    }
  ]
}
