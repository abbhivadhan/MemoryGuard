# Data Sources
ADNI_API_KEY=your_adni_api_key_here
OASIS_DATA_PATH=/path/to/oasis/data
NACC_DATA_PATH=/path/to/nacc/data

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ml_pipeline
POSTGRES_USER=ml_user
POSTGRES_PASSWORD=change_this_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Object Storage (MinIO/S3)
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
S3_BUCKET=alzheimer-ml-data
S3_REGION=us-east-1

# ML Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
TRAINING_BATCH_SIZE=32
RANDOM_SEED=42

# Monitoring
PERFORMANCE_ALERT_EMAIL=ml-team@example.com
DRIFT_THRESHOLD=0.2

# Security
ENCRYPTION_KEY=generate_a_secure_key_here
ENABLE_AUDIT_LOGGING=true
